<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NewsItemTitleFont" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#272727</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="NewsItemAuthorFont" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#5B5B5B</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="NewsItemDateFont" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#5B5B5B</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="NewsTitleFont" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#272727</item>
        <item name="android:textSize">26dp</item>
    </style>

    <style name="NewsMetaFont" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#5B5B5B</item>
        <item name="android:textSize">18dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="NewsDescriptionFont" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#272727</item>
        <item name="android:textSize">22dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>
</resources>
